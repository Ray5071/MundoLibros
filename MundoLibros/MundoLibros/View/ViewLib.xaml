<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="MundoLibros.View.ViewLib">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BindingContext="{Binding LibroVM}" Margin="15">

                <Label Text="Nuevos Libros" Font="24" HorizontalOptions="Center"
                   VerticalOptions="Center" FontAttributes="Bold" TextColor="Black" />
                <Label Text="Inserte los Libros en su Categoria Correspondiente" Font="16" HorizontalOptions="Center"
                   VerticalOptions="Center" FontAttributes="Italic" TextColor="Black" />

                <Entry x:Name="Id" Text="{Binding IdLibro}" IsVisible="False"></Entry>
                <Entry x:Name="NombreLibro" Text="{Binding NombreLibro}" 
                       Placeholder="Nombre del Libro" FontSize="14" PlaceholderColor="DimGray"></Entry>
                <Entry x:Name="AutorLibro" Text="{Binding AutorLibro}" 
                       Placeholder="Autor del Libro" FontSize="14" PlaceholderColor="DimGray"></Entry>
                <Entry x:Name="FechaPublicacionLibro" Text="{Binding FechaPublicacionLibro}" 
                       Placeholder="Fecha de Publicacion" FontSize="14" PlaceholderColor="DimGray"></Entry>
                <Entry x:Name="Precio" Text="{Binding PrecioLibro}" 
                       Placeholder="Precio del Libro" FontSize="14" PlaceholderColor="DimGray"></Entry>
                <Entry x:Name="Disponibildad" Text="{Binding Disponibilidad}" 
                       Placeholder="Hay mas Libros?" FontSize="14" PlaceholderColor="DimGray"></Entry>
                <Entry x:Name="CodigoCat" Text="{Binding IdCat}" 
                       Placeholder="Codigo de Categoria" FontSize="14" PlaceholderColor="DimGray"></Entry>
                
                <StackLayout BindingContext="{Binding CatVM}">
                    <Picker Title="Categorias" ItemsSource="{Binding Types}"/>
                </StackLayout>

                <Grid>
                    <Button Text="Insertar" Command="{Binding Agregar}" Clicked="Empty_Clicked" 
                            HorizontalOptions="Start" BackgroundColor="DarkGreen" TextColor="White" />
                    <Button Text="Editar" Command="{Binding Actualizar}" Clicked="Empty_Clicked" 
                            HorizontalOptions="Center" BackgroundColor="DarkGreen" TextColor="White" />
                    <Button Text="Eliminar" Command="{Binding Eliminar}" Clicked="Empty_Clicked" 
                            HorizontalOptions="End" BackgroundColor="DarkGreen" TextColor="White" />
                </Grid>


                <ScrollView>
                    <ListView x:Name="listView" 
                          HasUnevenRows="True" 
                          ItemsSource="{Binding Libros}" 
                          ItemTapped="ListView_ItemTapped">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout>
                                        <Label Text="{Binding IdLibro}" FontSize="Small" TextColor="Red"/>
                                        <Label Text="{Binding NombreLibro}" FontSize="Small" TextColor="Black"/>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollView>
                
                
                
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>