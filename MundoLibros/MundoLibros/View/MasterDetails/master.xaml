<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MundoLibros.View.master"
             Title="Master">

    <StackLayout Padding="20, 20" BackgroundColor="#5B93FE">

        <Grid HorizontalOptions="Fill">
            <Label Text="Menu" Font="25" TextColor="#FDFDFE" FontAttributes="Bold" />
        </Grid>

        <Button Text="Agregar Categoria" x:Name="btnAddCate" 
                Clicked="BtnAddCate_Clicked" VerticalOptions="Start" TextColor="#24C626" CornerRadius="30"></Button>
        <Button Text="Agregar Libro" x:Name="btnAddLib" 
                Clicked="BtnAddLib_Clicked" VerticalOptions="End" TextColor="#24C626" CornerRadius="30"></Button>
    </StackLayout>
    
</ContentPage>